<p id="notice"><%= notice %></p>

<h3> Buyer information</h3>
<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Paytype:</strong>
  <%= @order.paytype %>
</p>
<br>

<h3> Order details<h3>
<table style="border:3px #FFAC55 solid;padding:5px;" rules="all" cellpadding='5'>
  <tr>
    <td> Quantity </td>
    <td> Name </td>
    <td > Price </td>
  </tr>
  <% @order.lineitems.each do |item| %>
    <tr>
      <td> <%= item.quantity %> </td>
      <td> <%= item.product.name %> </td>
      <td class="item_price"> <%= item.product.price %> </td>
    </tr>
  <% end %>
  <tr class = "total_price">
    <td colspan = 2> Total </td>
    <td> <%= @order.total_price %> </td>
  </tr>
</table>
<br>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back to shopper', shopper_path %>
