<p id="notice"><%= notice %></p>

<h3> Items in your shopping cart</h3>

<table style="border:3px #FFAC55 solid;padding:5px;" rules="all" cellpadding='5'>
  <% @cart.lineitems.each do |item| %>
    <tr>
      <td> <%= item.quantity %> </td>
      <td> <%= item.product.name %> </td>
      <td class="item_price"> <%= item.product.price %> </td>
    </tr>
  <% end %>
  <tr class = "total_price">
    <td colspan = 2> Total </td>
    <td> <%= @cart.total_price %> </td>
  </tr>
</table>

<%= button_to "Empty Cart", @cart, method: :delete, data: {confirm: "Are you srue?"} %>
